<Window x:Class="MemoryGame.Views.SignInView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sign In" Height="400" Width="600"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <ListBox ItemsSource="{Binding Users}"
                 SelectedItem="{Binding SelectedUser}"
                 DisplayMemberPath="Username"
                 Margin="10" />

        <StackPanel Grid.Column="1" Orientation="Vertical" Margin="10">
            <Image Source="{Binding SelectedUser.AvatarPath}" 
                   Width="100" Height="100" Stretch="Uniform" Margin="0,0,0,10"/>
            <Button Content="Create" Command="{Binding CreateUserCommand}" Margin="0,5"/>
            <Button Content="Delete" Command="{Binding DeleteUserCommand}" Margin="0,5"/>
            <Button Content="Play" Command="{Binding PlayCommand}" Margin="0,5"/>
        </StackPanel>
    </Grid>
</Window>
