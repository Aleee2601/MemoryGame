<Window x:Class="MemoryGame.Views.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Username" Height="150" Width="300" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10">
        <TextBlock Text="Enter username:" Margin="0,0,0,5"/>
        <TextBox x:Name="InputBox" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="60" Margin="5" Click="Ok_Click"/>
            <Button Content="Cancel" Width="60" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
